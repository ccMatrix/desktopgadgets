<view height="110" width="180" ondock="view_onDock()" onundock="view_onUnDock()"
  onminimize="view_onMinimize()" onopen="view_onOpen()" onrestore="view_onRestore()"
 >
  <div height="110" name="mainDiv" width="180" x="0" y="0">
    <img cursor="hand" enabled="true" height="123" hitTest="htclient"
      name="background" width="153" x="20" y="5" onclick="openGmail();"
      src="images\red_gmail_envelope.png"/>
    <div cursor="hand" height="45" hitTest="htclient" name="divTitle"
      width="142" x="0" y="60">
      <img name="titleBg" opacity="200" x="-10" y="0" src="images\red_titlebg.png"
       />
      <label cursor="hand" enabled="true" height="22" hitTest="htclient"
        name="labelTitle" width="213" x="14" y="11" onclick="gmailDetails();"
        ondblclick="openGmail();" bold="true" color="#FFFFFF"
        font="" size="12"/>
    </div>
    <div cursor="hand" height="103" hitTest="htclient" name="newMails"
      width="104" x="104" y="33">
      <img height="60" name="dot" width="62" x="14" y="20" src="images\red_dot.png"
       />
      <label cursor="hand" enabled="true" height="31" hitTest="htclient"
        name="newMailCount" width="34" x="27" y="34" onclick="gmailDetails();"
        ondblclick="openGmail();" align="center" bold="true"
        color="#FFFFFF" font="" size="18" valign="middle">0
      </label>
    </div>
  </div>
  <script src="main.js" />
  <script src="xml2json.js" />
  <script src="visiturl.js" />
  <script src="options.js" />
  <script src="helper.js" />
</view>
